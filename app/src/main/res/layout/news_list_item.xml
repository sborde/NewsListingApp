<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_view_minheight">

    <TextView
        android:id="@+id/author_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size"
        android:textStyle="italic"
        android:textSize="14sp"
        tools:text="Author"/>

    <TextView
        android:id="@+id/title_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:text="1984"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/published_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/published_label"
            android:layout_marginLeft="@dimen/margin_size"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/published_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/published_label"
            android:layout_marginLeft="@dimen/label_margin"
            android:textSize="16sp"
            tools:text="1948"/>

        <TextView
            android:id="@+id/topic_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topic_label"
            android:layout_toRightOf="@id/published_field"
            android:layout_marginLeft="@dimen/margin_size"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/topic_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/topic_label"
            android:layout_marginLeft="@dimen/label_margin"
            tools:text="125"
            android:textSize="16sp"/>

    </RelativeLayout>

</LinearLayout>